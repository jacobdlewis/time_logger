%div.row
  %div.small-12.columns
    %h1.page-title Time Entries for #{current_user.name}
    %hr
    %table.time-entries-table
      %tbody
        %thead
          %th Date
          %th Project
          %th Activity
          %th Hours
          %th Pers. Mileage
          %th Bus. Mileage
          %th Show Entry
          %th Edit Entry
        -@time_entries.each do |entry|
          %tr
            %td= entry.date
            %td= entry.project.name
            %td= entry.activity.name
            %td= entry.hours_worked
            %td= entry.personal_mileage
            %td= entry.business_mileage
            %td= link_to "Show Entry", user_time_entry_path(current_user, entry.id)
            %td= link_to "Edit Entry", edit_user_time_entry_path(current_user, entry)
    .small-6-columns.small-offset-1
      = will_paginate @time_entries, renderer: BootstrapPagination::Rails
